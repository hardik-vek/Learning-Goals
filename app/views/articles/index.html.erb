<h1>Articles</h1>

<table>
  <th>Title</th>
  <th>Description</th>
  <th>Show</th>
  <th>Edit</th>
  <th>Destroy</th>
  <% @articles.each do |article| %>
  <tr>
    <td> <%= article.title %></td>
    <td> <%= article.description %></td>
    <td> <%= link_to "Show", article_path(article) %></td>
    <td> <%= link_to "Edit", edit_article_path(article) %></td>
    <td> <%= link_to "Destroy", article_path(article), data: {turbo_method: :delete} %></td>
  </tr>
  <% end %>
</table>

<%= link_to "create a aticle", new_article_path %>